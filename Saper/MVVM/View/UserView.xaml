<UserControl x:Class="Saper.MVVM.View.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Saper.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800">
    
    <Grid Width="250">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="55"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="55"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="62"/>
        </Grid.RowDefinitions>


        <Label HorizontalAlignment="Center" 
               FontSize="20" 
               Foreground="White">NAME:</Label>
        <TextBox Grid.Row="1" 
                     Height="40"
                     Width="250"
                     Margin="0,10,0,0" 
                     FontSize="30"
                     CaretBrush="White"
                     Text="{Binding NameValue, Mode=TwoWay}"
                     Style="{StaticResource InputName}"
                     >
        </TextBox>
        <Label Grid.Row="2"
               HorizontalAlignment="Center" 
               FontSize="20"    
               Foreground="White">PASSWORD:</Label>
        <PasswordBox Grid.Row="3" 
                     Height="40"
                     Width="250"
                     Margin="0,10,0,0" 
                     FontSize="30"
                     CaretBrush="White"
                     PasswordChanged="PasswordBox_PasswordChanged"
                     Style="{StaticResource PasswordInput}"
                     >
        </PasswordBox>
        <StackPanel Grid.Row="4" Orientation="Horizontal">
            <Label
                VerticalAlignment="Center"
                Margin="65,0,0,0"
               FontSize="20"          
               Foreground="White" Content="New User:"/>
            <CheckBox VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      IsChecked="{Binding NewUser}"/>


        </StackPanel>

        <Label 
              Grid.Row="5"
               HorizontalAlignment="Center" 
               FontSize="20"         
               Foreground="White">LEVEL HARD:</Label>
        <Slider Grid.Row="6"
             x:Name="mySlider"
             Minimum="1"
             Maximum="3"
             TickFrequency="1"
             IsSnapToTickEnabled="True"  
             VerticalAlignment="Center"
             Value="{Binding SliderValue, Mode=TwoWay}"
              />
        <TextBlock
              x:Name="levelTextBox"
               Text="{Binding DisplayedText}"
               Grid.Row="7"
               HorizontalAlignment="Center" 
               FontSize="22" 
               Foreground="{Binding ColorText}"></TextBlock>
        <Button
             x:Name="buttonPlay"
             Grid.Row="8"
             Style="{StaticResource RoundButton}"
             Content="Play"
             Command="{Binding GameViewCommand}"
             FontFamily="Jersey 15" FontWeight="Bold"  />
        
    </Grid>
</UserControl>
<!--ValueChanged="mySlider_ValueChanged"-->