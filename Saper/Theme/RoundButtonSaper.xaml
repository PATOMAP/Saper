<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type Button}"
           x:Key="RoundButtonSaper">
    <Style.Setters>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Button>
                        <Image Source="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag}" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    </Button>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style.Setters>
</Style>
</ResourceDictionary>


